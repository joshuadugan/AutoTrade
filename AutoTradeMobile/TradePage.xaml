<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoTradeMobile.TradePage"
             xmlns:local="clr-namespace:AutoTradeMobile"
             Title="Trade">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <VerticalStackLayout VerticalOptions="Center">
            <Entry Placeholder="Ticker" x:Name="txtSymbol" 
                   BindingContext="{x:Static local:TradeApp.AppData}"
                   Text="{Binding LastSymbol}"
                   HeightRequest="50" WidthRequest="100" Margin="20" />
            <Button x:Name="btnTicker" Text="GO" Clicked="btnTicker_Clicked" HeightRequest="30" WidthRequest="50" />
        </VerticalStackLayout>

        <Label Grid.Row="1"
               Text="Enter a ticker symbol to start"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               />



        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label 
               TextColor="White"
               FontSize="Small"
               IsVisible="false"
                   Grid.Column="0"
                   BindingContext="{x:Static local:TradeApp.SessionData}"
                   Text="{Binding LastQuoteDate}"
               />

            <Label 
               TextColor="White"
               FontSize="Small"
               IsVisible="false"
                   Grid.Column="1"
                   BindingContext="{x:Static local:TradeApp.SessionData}"
                   Text="{Binding TotalRequests}"
               />

            <Label 
               TextColor="White"
               FontSize="Small"
               IsVisible="false"
                   Grid.Column="2"
                   BindingContext="{x:Static local:TradeApp.SessionData}"
                   Text="{Binding LastQuoteResponseTime, StringFormat='{0:fff}'}"
               />

        </Grid>

        <Label
                Grid.Row="2"
                x:Name="lblError"
                TextColor="White"
                FontSize="Small"
                HorizontalOptions="Center"
                VerticalOptions="Center" 
                Grid.ColumnSpan="2"
                BindingContext="{x:Static local:TradeApp.SessionData}"
                Text="{Binding TradingError}"
                IsVisible="{Binding hasError}"
            />

    </Grid>

</ContentPage>