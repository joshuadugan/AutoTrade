<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoTradeMobile.TradePage"
             Title="Trade">
    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <Label x:Name="lblLastPrice"
               TextColor="White"
               FontSize="Medium"
               Text="Last Price"
               IsVisible="false"
               />

        <Grid x:Name="gridSymbolControls">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Entry Placeholder="Ticker" x:Name="txtSymbol" Grid.Row="1"/>
            <Button x:Name="btnTicker" Text="GO" Grid.Row="2" Clicked="btnTicker_Clicked" />
        </Grid>

        <Label
            x:Name="lblError"
            TextColor="White"
            FontSize="18"
            Text=""
            IsVisible="false"/>

    </VerticalStackLayout>

</ContentPage>